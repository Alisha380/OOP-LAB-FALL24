public class Books {

    /**
     * @param args the command line arguments
     */
    public static void main(String[] args) {
        String[] books = {"english", "urdu", "Chemistry", "oop", "pf"};
        for (int i = 0; i < books.length; i++) {
            System.out.println(books[i]);

    }
}
